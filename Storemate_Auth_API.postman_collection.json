{
  "info": {
    "_postman_id": "storemate-auth-api",
    "name": "Storemate Auth API",
    "description": "Authentication API collection for Storemate OMS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get All Tenants",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url_landlord}}/tenants",
              "host": [
                "{{base_url_landlord}}"
              ],
              "path": [
                "tenants"
              ]
            },
            "description": "Get list of all tenants - No authentication required"
          }
        }
      ]
    },
    {
      "name": "ACME Tenant Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.environment.set('token_acme', pm.response.json().token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@tenant.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url_acme}}/login",
              "host": [
                "{{base_url_acme}}"
              ],
              "path": [
                "login"
              ]
            },
            "description": "Login with admin credentials - Returns auth token"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token_acme}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url_acme}}/me",
              "host": [
                "{{base_url_acme}}"
              ],
              "path": [
                "me"
              ]
            },
            "description": "Get current authenticated user info - Requires token"
          }
        },
        {
          "name": "Get Products (Protected)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token_acme}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url_acme}}/products",
              "host": [
                "{{base_url_acme}}"
              ],
              "path": [
                "products"
              ]
            },
            "description": "Get products - Requires authentication token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token_acme}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url_acme}}/logout",
              "host": [
                "{{base_url_acme}}"
              ],
              "path": [
                "logout"
              ]
            },
            "description": "Logout and invalidate token"
          }
        },
        {
          "name": "Login as Staff",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.environment.set('token_acme_staff', pm.response.json().token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"staff@tenant.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url_acme}}/login",
              "host": [
                "{{base_url_acme}}"
              ],
              "path": [
                "login"
              ]
            },
            "description": "Login as staff user"
          }
        }
      ]
    },
